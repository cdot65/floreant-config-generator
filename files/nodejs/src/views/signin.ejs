<!DOCTYPE html>
<html>

<head>
    <%- include('./partials/config-head', {headerTitle: 'Sign In'}); %>
</head>

<body>
    <div id="wrapper">
        <header>
            <%- include('./partials/config-header'); %>
        </header>
        <section class="banner">
            <img src="../images/index_splash.png" />
            <div class="inner-content col-md-12">
                <div class="container">
                    <h1>Login</h1>
                    <span>Please login to work with the configuration tool</span>
                </div>
            </div>
        </section>
        <section class="sec_include">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 section5 text-center">
                        <h2 class="h1 font-w400">Login</h2>
                        <p class="margin-top-m margin-bottom-m">Please enter your credientials</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <form name="signup" enctype="multipart/form-data" method="post" action="/auth/signIn" role="form" data-toggle="validator" novalidate="true">
                            <div class="form schedule-assessment">
                                <div class="row margin-top-l">
                                    <div class="form-group col-md-6">
                                        <label for="username" class="sr-only">User Name</label>
                                        <input name="username" id="username" placeholder="User Name" type="text" value="" required="required" data-error="Please enter your user name">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <!-- close col-->
                                    <div class="form-group col-md-6">
                                        <label for="password" class="sr-only">Password</label>
                                        <input name="password" id="password" placeholder="Password" type="password" value="" required="required" data-error="Please enter your password">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <!-- close col-->
                                </div>
                                <!-- close row-->
                                <div class="form-group text-center">
                                    <input class="submit center-block btn btn-primary" value="Submit" type="submit">
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <%- include('./partials/config-footer'); %>
        </footer>
    </div>
    <!--End of Wrapper ----------->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>